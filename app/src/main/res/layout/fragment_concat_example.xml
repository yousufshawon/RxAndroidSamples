<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yousuf.shawon.rxandroidsamples.fragments.ConcatExampleFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        >

        <Button
            android:id="@+id/buttonConcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute Concat"
            style="@style/listButtonStyle"
            android:layout_margin="5dp"
            />


        <Button
            android:id="@+id/buttonConcatEager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute ConcatEager"
            style="@style/listButtonStyle"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/buttonMerge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute Merge"
            style="@style/listButtonStyle"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/buttonPublishMerge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute Publish + Merge"
            style="@style/listButtonStyle"
            android:layout_margin="5dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />


        </ScrollView>



    </LinearLayout>




</FrameLayout>
